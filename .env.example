# ===== Required =====
# OpenAI
OPENAI_API_KEY=sk-...

# Gmail OAuth (direct refresh-token flow)
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
GOOGLE_REFRESH_TOKEN=...

# ===== Optional: Token Server (leave TOKEN_SERVER_URL empty to use refresh-token directly) =====
# TOKEN_SERVER_URL=https://your-token-server.example.com
# TOKEN_SERVER_PATH=/google/access-token
# TOKEN_SERVER_METHOD=GET
# TOKEN_SERVER_AUTH_HEADER=Authorization
# TOKEN_SERVER_API_KEY=...
# TOKEN_SERVER_SCOPE="https://www.googleapis.com/auth/gmail.modify"
# TOKEN_SERVER_TIMEOUT_MS=6000

# ===== Autodraft settings =====
FEATURE_AUTODRAFT_ALL=true
FEATURE_AUTODRAFT_ONLY_MODE=true
FEATURE_AUTODRAFT_RESPONSES=false
FEATURE_AUTODRAFT_DIRECT_GMAIL=true
AUTODRAFT_FORCE_RESPONSES_ONLY=false

AUTODRAFT_POLL_SECONDS=180
AUTODRAFT_MAX_PER_POLL=2
AUTODRAFT_LOOKBACK=3d
AUTODRAFT_HISTORY_LIMIT=5

AUTODRAFT_REQUIRE_ALLOW_LABEL=true
AUTODRAFT_ALLOW_LABEL_NAME=ai-draft-allow
AUTODRAFT_EXCLUDE_PROMOTIONS=true

# Optional tuning
GMAIL_API_TIMEOUT_MS=6000
AUTODRAFT_SIGNATURE=""
